<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
	"http://struts.apache.org/dtds/struts-2.0.dtd">
 
<struts>
    
	<package name="ajax" extends="struts-default" namespace="/ajax">
	    <action name="index" class="com.swift.example.action.AjaxAction" method="index">
	        <result name="success">/ajax_page.jsp</result>
	    </action>
	    
	    <action name="resultPage" class="com.swift.example.action.AjaxAction" method="resultPage">
	        <result name="success">/ajax_result.jsp</result>
	    </action>
	</package>
	
</struts>