<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">
 
<struts>
    
    <!-- Included the separate login.xml file for separation of concern. -->
    <include file="login.xml"/>
    
    <constant name="struts.devMode" value="true" />
	<package name="default" extends="struts-default">
		<action name="videos" class="com.swift.example.action.VideoAction">
			<result name="success">/videos.jsp</result>
		</action>
		<action name="music" class="com.swift.example.action.MusicAction">
		    <result name="success">/music.jsp</result>
		</action>
	</package>
	
	<!-- Dummy Class Mapping -->
	<package name="index" extends="struts-default">
	    <action name="index">
	        <result>/index.jsp</result>
	    </action>
	</package>
</struts>