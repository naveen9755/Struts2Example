<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">
 
<struts>
    <bean class="com.swift.example.serviceimpl.UserServiceImpl" name="users" type="com.swift.example.service.UserService"/>
    <bean class="com.swift.example.mailer.Mailer" name="mailer" />
	<package name="login" extends="struts-default">
	    <action name="login" class="com.swift.example.action.LoginAction" method="login">
	        <result name="success" type="redirect">/index.html</result>
	        <result name="login">/login.jsp</result>
	        <result name="input">/login.jsp</result>
	    </action>
	    
	    <action name="logout" class="com.swift.example.action.LoginAction" method="logout">
	        <result name="success" type="redirect">/</result>
	    </action>
	    
	    <action name="forgotPassword" class="com.swift.example.action.LoginAction" method="forgotPassword">
	        <result name="success">/forgot_password.jsp</result>
	    </action>
	    
	    <action name="sendPassword" class="com.swift.example.action.LoginAction" method="sendPassword">
	        <result name="success" type="redirect">/</result>
	        <result name="error">/forgot_password.jsp</result>
	    </action>
	</package>
	
	<package name="user" extends="struts-default" namespace="/users">
	    <action name="addUser" class="com.swift.example.action.UserAction" method="addUser">
	        <result name="success">/user.jsp</result>
	    </action>
	    
	    <action name="editUser" class="com.swift.example.action.UserAction" method="editUser">
	        <result name="success">/user.jsp</result>
	    </action>
	    
	    <action name="removeUser" class="com.swift.example.action.UserAction" method="removeUser">
	        <result name="success">/user.jsp</result>
	    </action>
	    
	    <action name="listUser" class="com.swift.example.action.UserAction" method="listUser">
	        <result name="success">/user.jsp</result>
	    </action>
	</package>
</struts>